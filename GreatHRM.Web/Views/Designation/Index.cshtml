@using GreatHRM.Entities
@model IEnumerable<GreatHRM.Entities.Designation>
<div class="box">
    <div class="box-header">
        <h3 class="box-title"></h3>

        <div class="box-tools">
            <a class="btn btn-sm btn-success" href="@Url.Action("Add","Designation")"><i class="fa fa-plus"></i></a>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body no-padding">
        <div class="form-horizontal">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().DesignationName)</th>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Description)</th>
                    </tr>
                    @foreach (var designation in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(model => designation.DesignationName)</td>
                            <td>@Html.DisplayFor(model => designation.Description)</td>
                          
                        </tr>
                    }
                </thead>

            </table>
        </div>
    </div>
</div>





