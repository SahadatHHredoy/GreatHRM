
@using GreatHRM.Entities
@model GreatHRM.Entities.Machine
@using (Html.BeginForm("Add", "Machine", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Machine Add</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div class="row">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.BranchId, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.DropDownListFor(model => model.BranchId, null, "Choose---", new { @class = "form-control", @onchange = "OnMemberChange(this)" })
                            @Html.ValidationMessageFor(model => model.BranchId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.MachineNo, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.TextBoxFor(model => model.MachineNo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MachineNo)
                        </div>
                    </div> 
                    <div class="form-group">
                        @Html.LabelFor(model => model.SerialNo, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.TextBoxFor(model => model.SerialNo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SerialNo)
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group ">
                        @Html.LabelFor(model => model.MachineName, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.TextBoxFor(model => model.MachineName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MachineName)
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.PortNo, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.TextBoxFor(model => model.PortNo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PortNo)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.AccessType, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.TextBoxFor(model => model.AccessType, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AccessType)
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="box-footer">
            <a href="@Url.Action("Index", "Machine")" class="btn btn-danger">Cancel</a>
            <button type="submit" class="btn btn-info pull-right">Save</button>
        </div>
    </div>
}




